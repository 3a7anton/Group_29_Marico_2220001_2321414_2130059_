<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.marico_bangladesh.inventory_manager.ProductDisposalRecordController">
   <children>
      <Label layoutX="28.0" layoutY="22.0" text="Product Disposal Record">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Button layoutX="535.0" layoutY="26.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      
      <VBox layoutX="28.0" layoutY="70.0" spacing="20.0">
         <children>
            <HBox spacing="15.0">
               <children>
                  <Label prefWidth="100.0" text="Product ID:" />
                  <TextField fx:id="productIdField" prefWidth="200.0" promptText="Enter Product ID" />
               </children>
            </HBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Reason for Disposal:" />
                  <TextArea fx:id="reasonTextArea" prefHeight="80.0" prefWidth="400.0" promptText="Enter detailed reason for disposal..." />
               </children>
            </VBox>
            <HBox spacing="15.0">
               <children>
                  <Label prefWidth="100.0" text="Disposal Method:" />
                  <ComboBox fx:id="disposalMethodComboBox" prefWidth="200.0" promptText="Select Method" />
               </children>
            </HBox>
            <HBox spacing="15.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleRecord" text="Record" />
                  <Button mnemonicParsing="false" onAction="#handleClear" text="Clear" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <Label layoutX="28.0" layoutY="320.0" prefHeight="40.0" prefWidth="540.0" text="Confirmation: Disposal record will be saved and product will be marked as disposed" textFill="#795548" wrapText="true" />
   </children>
</AnchorPane>
