<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.marico_bangladesh.inventory_manager.AddNewProductController">
   <children>
      <Label layoutX="28.0" layoutY="22.0" text="Add New Product to Inventory">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Button layoutX="535.0" layoutY="26.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      
      <VBox layoutX="28.0" layoutY="70.0" spacing="20.0">
         <children>
            <HBox spacing="15.0">
               <children>
                  <Label prefWidth="100.0" text="Product Name:" />
                  <TextField prefWidth="200.0" promptText="Enter Product Name" />
               </children>
            </HBox>
            <HBox spacing="15.0">
               <children>
                  <Label prefWidth="100.0" text="Product ID:" />
                  <TextField prefWidth="200.0" promptText="Enter Product ID" />
               </children>
            </HBox>
            <HBox spacing="15.0">
               <children>
                  <Label prefWidth="100.0" text="Quantity:" />
                  <TextField prefWidth="200.0" promptText="Enter Initial Quantity" />
               </children>
            </HBox>
            <HBox spacing="15.0">
               <children>
                  <Label prefWidth="100.0" text="Price:" />
                  <TextField prefWidth="200.0" promptText="Enter Price" />
               </children>
            </HBox>
            <HBox spacing="15.0">
               <children>
                  <Button mnemonicParsing="false" text="Validate" />
                  <Button mnemonicParsing="false" text="Save" />
                  <Button mnemonicParsing="false" text="Clear" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <Label layoutX="28.0" layoutY="320.0" prefHeight="40.0" prefWidth="540.0" text="Confirmation: Product will be added to inventory after validation" textFill="#388e3c" wrapText="true" />
   </children>
</AnchorPane>
