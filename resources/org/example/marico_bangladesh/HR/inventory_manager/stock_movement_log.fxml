<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.marico_bangladesh.inventory_manager.StockMovementLogController">
   <children>
      <Label layoutX="28.0" layoutY="22.0" text="Stock Movement Log">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Button layoutX="535.0" layoutY="26.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      
      <HBox layoutX="28.0" layoutY="70.0" spacing="10.0">
         <children>
            <Label text="From:" />
            <DatePicker prefWidth="100.0" promptText="Start Date" />
            <Label text="To:" />
            <DatePicker prefWidth="100.0" promptText="End Date" />
            <Label text="Product ID:" />
            <TextField prefWidth="100.0" promptText="Optional" />
            <Button mnemonicParsing="false" text="Filter" />
            <Button mnemonicParsing="false" text="Download Log" />
         </children>
      </HBox>
      
      <TableView layoutX="28.0" layoutY="120.0" prefHeight="240.0" prefWidth="540.0">
        <columns>
          <TableColumn prefWidth="90.0" text="Product ID" />
          <TableColumn prefWidth="100.0" text="Date" />
          <TableColumn prefWidth="80.0" text="From" />
          <TableColumn prefWidth="80.0" text="To" />
          <TableColumn prefWidth="100.0" text="Action" />
          <TableColumn prefWidth="90.0" text="Quantity" />
        </columns>
      </TableView>
      
      <Label layoutX="28.0" layoutY="370.0" prefHeight="20.0" prefWidth="540.0" text="Stock movement history and download status will be shown here" textFill="#607d8b" />
   </children>
</AnchorPane>
