<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.marico_bangladesh.INVENTORY.InventoryAuditingController">
   <children>
      <Label layoutX="28.0" layoutY="22.0" text="Inventory Auditing">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Button layoutX="535.0" layoutY="26.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
      
      <HBox layoutX="28.0" layoutY="70.0" spacing="15.0">
         <children>
            <Label prefWidth="80.0" text="Product ID:" />
            <TextField fx:id="productIdField" prefWidth="120.0" promptText="Enter Product ID" />
            <Label prefWidth="100.0" text="Physical Count:" />
            <TextField fx:id="physicalCountField" prefWidth="100.0" promptText="Enter Count" />
            <Button mnemonicParsing="false" onAction="#handleGenerateReport" text="Generate Report" />
            <Button mnemonicParsing="false" onAction="#handleExport" text="Export" />
         </children>
      </HBox>
      
      <Label layoutX="28.0" layoutY="110.0" prefHeight="20.0" prefWidth="540.0" text="Discrepancy Status: Mismatches will be highlighted below" textFill="#ff5722" />
      
      <TableView fx:id="auditTable" layoutX="28.0" layoutY="140.0" prefHeight="220.0" prefWidth="540.0">
        <columns>
          <TableColumn fx:id="itemColumn" prefWidth="120.0" text="Item" />
          <TableColumn fx:id="systemQtyColumn" prefWidth="100.0" text="System Qty" />
          <TableColumn fx:id="physicalQtyColumn" prefWidth="100.0" text="Physical Qty" />
          <TableColumn fx:id="differenceColumn" prefWidth="100.0" text="Difference" />
          <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
        </columns>
      </TableView>
      
      <Label layoutX="28.0" layoutY="370.0" prefHeight="20.0" prefWidth="540.0" text="Audit results and discrepancy reports will be displayed here" textFill="#424242" />
   </children>
</AnchorPane>
