          <TableColumn fx:id="jobTitleCol" prefWidth="75.0" text="Job Title" />
          <TableColumn fx:id="deptCol" prefWidth="75.0" text="Dept." />
            <TableColumn fx:id="deadlineCol" prefWidth="75.0" text="Deadline" />
