   <children>
      <Label layoutX="25.0" layoutY="26.0" text="Manage Job Posting">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="jobTitleTextField" layoutX="25.0" layoutY="64.0" promptText="Job Title" />
