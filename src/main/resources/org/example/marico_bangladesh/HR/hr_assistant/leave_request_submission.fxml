<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.marico_bangladesh.HR.hr_assistant.LeaveRequestSubmissionController"
            prefHeight="700.0" prefWidth="900.0">

   <Label layoutX="350.0" layoutY="30.0" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Leave Request Submission" />
   
   <Label fx:id="outputLabel" layoutX="50.0" layoutY="660.0" prefWidth="800.0" style="-fx-text-fill: red;" />

   <!-- Leave Request Form -->
   <Label layoutX="50.0" layoutY="80.0" text="Employee ID:" />
   <TextField fx:id="employeeIdText" layoutX="150.0" layoutY="75.0" prefWidth="150.0" promptText="Enter Employee ID" />
   
   <Label layoutX="50.0" layoutY="120.0" text="Employee Name:" />
   <TextField fx:id="employeeNameText" layoutX="150.0" layoutY="115.0" prefWidth="200.0" promptText="Enter Employee Name" />
   
   <Label layoutX="400.0" layoutY="80.0" text="Leave Type:" />
   <ComboBox fx:id="leaveTypeCombobox" layoutX="480.0" layoutY="75.0" prefWidth="150.0" promptText="Select Leave Type" />
   
   <Label layoutX="50.0" layoutY="160.0" text="Start Date:" />
   <DatePicker fx:id="startDatePicker" layoutX="150.0" layoutY="155.0" prefWidth="150.0" />
   
   <Label layoutX="400.0" layoutY="160.0" text="End Date:" />
   <DatePicker fx:id="endDatePicker" layoutX="480.0" layoutY="155.0" prefWidth="150.0" />
   
   <Label layoutX="50.0" layoutY="200.0" text="Reason:" />
   <TextArea fx:id="reasonTextArea" layoutX="150.0" layoutY="200.0" prefHeight="80.0" prefWidth="480.0" promptText="Enter reason for leave" />

   <!-- Action Buttons -->
   <Button fx:id="submitLeaveButton" layoutX="50.0" layoutY="300.0" onAction="#submitLeaveRequest" 
           prefHeight="35.0" prefWidth="120.0" text="Submit Request" />
   
   <Button fx:id="clearFormButton" layoutX="180.0" layoutY="300.0" onAction="#clearForm" 
           prefHeight="35.0" prefWidth="80.0" text="Clear" />

   <!-- Search Section -->
   <Label layoutX="400.0" layoutY="305.0" text="Search:" />
   <TextField fx:id="searchText" layoutX="460.0" layoutY="300.0" prefWidth="150.0" promptText="Search by ID/Name" />
   <Button fx:id="searchButton" layoutX="620.0" layoutY="300.0" onAction="#searchLeaveRequest" 
           prefHeight="30.0" prefWidth="60.0" text="Search" />
   <Button fx:id="resetButton" layoutX="690.0" layoutY="300.0" onAction="#resetFilter" 
           prefHeight="30.0" prefWidth="60.0" text="Reset" />

   <!-- Leave Request Table -->
   <TableView fx:id="leaveRequestTable" layoutX="50.0" layoutY="350.0" prefHeight="290.0" prefWidth="800.0">
      <columns>
         <TableColumn fx:id="employeeIdCol" prefWidth="100.0" text="Employee ID" />
         <TableColumn fx:id="employeeNameCol" prefWidth="120.0" text="Employee Name" />
         <TableColumn fx:id="leaveTypeCol" prefWidth="100.0" text="Leave Type" />
         <TableColumn fx:id="startDateCol" prefWidth="100.0" text="Start Date" />
         <TableColumn fx:id="endDateCol" prefWidth="100.0" text="End Date" />
         <TableColumn fx:id="reasonCol" prefWidth="150.0" text="Reason" />
         <TableColumn fx:id="statusCol" prefWidth="80.0" text="Status" />
         <TableColumn fx:id="requestDateCol" prefWidth="100.0" text="Request Date" />
      </columns>
   </TableView>

   <!-- Back Button -->
   <Button fx:id="backButton" layoutX="750.0" layoutY="30.0" onAction="#goBack" 
           prefHeight="30.0" prefWidth="80.0" text="Back" />

</AnchorPane>
