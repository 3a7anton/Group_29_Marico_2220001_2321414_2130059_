<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.marico_bangladesh.HR.hr_assistant.AttendanceTrackingController">
   <children>
      <Label layoutX="300.0" layoutY="20.0" text="Attendance Tracking">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <!-- Input Fields -->
      <Label layoutX="50.0" layoutY="70.0" text="Employee ID:" />
      <TextField fx:id="employeeIdField" layoutX="150.0" layoutY="65.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter Employee ID" />
      
      <Label layoutX="400.0" layoutY="70.0" text="Date:" />
      <DatePicker fx:id="datePicker" layoutX="450.0" layoutY="65.0" prefHeight="25.0" prefWidth="150.0" />
      
      <Label layoutX="50.0" layoutY="110.0" text="Status:" />
      <ComboBox fx:id="statusCombobox" layoutX="150.0" layoutY="105.0" prefHeight="25.0" prefWidth="200.0" promptText="Select Status" />
      
      <!-- Buttons -->
      <Button fx:id="addButton" layoutX="50.0" layoutY="150.0" onAction="#addAttendanceRecord" text="Add Record" />
      <Button fx:id="updateButton" layoutX="150.0" layoutY="150.0" onAction="#updateAttendanceRecord" text="Update Record" />
      <Button fx:id="deleteButton" layoutX="260.0" layoutY="150.0" onAction="#deleteAttendanceRecord" text="Delete Record" />
      <Button fx:id="loadButton" layoutX="370.0" layoutY="150.0" onAction="#loadAttendanceRecords" text="Load Records" />
      <Button fx:id="backButton" layoutX="680.0" layoutY="20.0" onAction="#goBack" text="Back to Dashboard" />
      
      <!-- Output Label -->
      <Label fx:id="outputLabel" layoutX="50.0" layoutY="190.0" prefWidth="700.0" style="-fx-text-fill: blue;" />
      
      <!-- Table -->
      <TableView fx:id="attendanceTable" layoutX="50.0" layoutY="220.0" prefHeight="250.0" prefWidth="700.0">
        <columns>
          <TableColumn fx:id="employeeIdCol" prefWidth="150.0" text="Employee ID" />
          <TableColumn fx:id="employeeNameCol" prefWidth="200.0" text="Employee Name" />
          <TableColumn fx:id="dateCol" prefWidth="150.0" text="Date" />
          <TableColumn fx:id="statusCol" prefWidth="100.0" text="Status" />
          <TableColumn fx:id="checkInTimeCol" prefWidth="100.0" text="Check In" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
